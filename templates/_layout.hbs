<div class="container-fluid">
	<header class="row">
		<div class="left">
			{{#is @root.router.pattern "index"}}
			<img src="images/icon.png">
			{{else}}
			<button class="btn btn-primary btn-sm" on-click="app.back()">&lt;</button>
			{{/is}}
		</div>

		{{title}}
	</header>

	<div class="screen" view-id="{{title}}">
		{{partial "@partial-block"}}
	</div>
</div>
